{
  "manifest_version": 3,

  "name": "Timezone Converter",
  "description": "Converting timezones is hard. This extension makes it easy.",
  "version": "1.0",

  "action": {
    "default_icon": "icon.png",
    "128": "icon.png"

  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
